---
import { getAssetPath } from '../utils/assetPath';
const logoPath = getAssetPath('logo-transparent.png');
---

<footer class="footer">
  <div class="footer-container">
    <div class="footer-content">
      <div class="footer-logo-section">
        <div class="footer-logo">
          <img src={logoPath} alt="Minerva Systems" class="footer-logo-icon" />
          <span class="footer-logo-text">MINERVA SYSTEMS</span>
        </div>
      </div>

      <div class="footer-links">
        <div class="footer-column">
          <h3 class="footer-column-title">Quick Links</h3>
          <a href="#home" class="footer-link">Home</a>
          <a href="#tiers" class="footer-link">Services</a>
          <a href="#how-it-works" class="footer-link">How It Works</a>
        </div>
        <div class="footer-column">
          <h3 class="footer-column-title">Company</h3>
          <a href="#about" class="footer-link">About</a>
          <a href="#privacy" class="footer-link">Privacy Policy</a>
        </div>
      </div>

      <div class="footer-social">
        <h3 class="footer-column-title">Connect</h3>
        <div class="social-icons">
          <a href="#" class="social-icon" aria-label="Twitter">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path>
            </svg>
          </a>
          <a href="#" class="social-icon" aria-label="LinkedIn">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
              <rect x="2" y="9" width="4" height="12"></rect>
              <circle cx="4" cy="4" r="2"></circle>
            </svg>
          </a>
          <a href="#" class="social-icon" aria-label="GitHub">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
            </svg>
          </a>
          <a href="#" class="social-icon" aria-label="Email">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
              <polyline points="22,6 12,13 2,6"></polyline>
            </svg>
          </a>
        </div>
      </div>
    </div>

    <div class="footer-bottom">
      <p class="footer-copyright">
        &copy; 2025 Minerva Systems. All rights reserved.
      </p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: #0f172a;
    border-top: 1px solid #334155;
    padding: 3rem 0 1.5rem;
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .footer-content {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    margin-bottom: 2rem;
  }

  .footer-logo-section {
    text-align: center;
  }

  .footer-logo {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }

  .footer-logo-icon {
    width: 40px;
    height: 40px;
    background: #fbbf24;
    border-radius: 8px;
  }

  .footer-logo-text {
    font-size: 1.25rem;
    font-weight: bold;
    color: #fbbf24;
  }

  .footer-tagline {
    color: #9ca3af;
    font-size: 0.875rem;
  }

  .footer-links {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
  }

  .footer-column {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .footer-column-title {
    font-size: 1rem;
    font-weight: 600;
    color: #fbbf24;
    margin-bottom: 0.5rem;
  }

  .footer-link {
    color: #d1d5db;
    text-decoration: none;
    transition: color 0.3s ease;
    font-size: 0.875rem;
  }

  .footer-link:hover {
    color: #fbbf24;
  }

  .footer-social {
    text-align: center;
  }

  .social-icons {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-top: 1rem;
  }

  .social-icon {
    color: #d1d5db;
    transition: color 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 8px;
    border: 1px solid #334155;
  }

  .social-icon:hover {
    color: #fbbf24;
    border-color: #fbbf24;
  }

  .footer-bottom {
    border-top: 1px solid #334155;
    padding-top: 1.5rem;
    text-align: center;
  }

  .footer-copyright {
    color: #9ca3af;
    font-size: 0.875rem;
    margin: 0;
  }

  @media (min-width: 768px) {
    .footer-content {
      grid-template-columns: 2fr 2fr 1fr;
      text-align: left;
    }

    .footer-logo-section {
      text-align: left;
    }

    .footer-social {
      text-align: left;
    }

    .social-icons {
      justify-content: flex-start;
    }
  }
</style>

