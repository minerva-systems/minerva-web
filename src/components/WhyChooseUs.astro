<section id="why-choose-us" class="why-choose-us">
  <div class="why-choose-us-container">
    <div class="why-choose-us-header">
      <h2 class="why-choose-us-title">Why Choose Us</h2>
      <p class="why-choose-us-subtitle">
        What sets us apart in delivering exceptional business support
      </p>
    </div>

    <div class="pillars-grid">
      {pillars.map((pillar) => (
        <div class="pillar-card">
          <div class="pillar-icon">{pillar.icon}</div>
          <h3 class="pillar-title">{pillar.title}</h3>
          <p class="pillar-description">{pillar.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .why-choose-us {
    padding: 5rem 0;
    background: rgba(30, 41, 59, 0.5);
  }

  .why-choose-us-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .why-choose-us-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .why-choose-us-title {
    font-size: 2.5rem;
    font-weight: bold;
    margin-bottom: 1.5rem;
    color: #fbbf24;
  }

  .why-choose-us-subtitle {
    font-size: 1.25rem;
    color: #d1d5db;
    max-width: 768px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .pillars-grid {
    display: grid;
    gap: 2rem;
    grid-template-columns: 1fr;
  }

  .pillar-card {
    background: rgba(15, 23, 42, 0.7);
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);
    padding: 2.5rem;
    border-radius: 12px;
    border: 1px solid #334155;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    text-align: center;
  }

  .pillar-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(251, 191, 36, 0.05) 0%, transparent 50%);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .pillar-card:hover {
    transform: translateY(-5px);
    border-color: rgba(251, 191, 36, 0.3);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
  }

  .pillar-card:hover::before {
    opacity: 1;
  }

  .pillar-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
    position: relative;
    z-index: 1;
  }

  .pillar-title {
    font-size: 1.5rem;
    font-weight: bold;
    margin-bottom: 1rem;
    color: #fbbf24;
    position: relative;
    z-index: 1;
  }

  .pillar-description {
    color: #d1d5db;
    line-height: 1.6;
    position: relative;
    z-index: 1;
  }

  @media (min-width: 768px) {
    .pillars-grid {
      grid-template-columns: repeat(2, 1fr);
    }
    
    .why-choose-us-title {
      font-size: 3rem;
    }
  }

  @media (min-width: 1024px) {
    .pillars-grid {
      grid-template-columns: repeat(4, 1fr);
    }
    
    .why-choose-us-title {
      font-size: 3.5rem;
    }
  }
</style>

